datasource db {
   provider = "postgresql"
  url      = env("COURSE_DB_URL")
  schemas  = ["course"]  
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]  
}
model Course {
  id          String   @id
  title       String
  description String
  cover       String
  link        String
  type        String
  price       Price     @relation("CourseToPrice", fields: [priceId], references: [id])
  priceId     Int
  subjects    Subject[]
  works       Work[]

  @@schema("course")  
}

model Price {
  id         Int    @id @default(autoincrement())
  original   String
  discounted String
  courses    Course[] @relation("CourseToPrice")

  @@schema("course")
}

model Subject {
  id       Int      @id @default(autoincrement())
  category String
  topics   String[]
  courseId String
  course   Course   @relation(fields: [courseId], references: [id])

  @@schema("course")
}

model Work {
  id       Int     @id @default(autoincrement())
  title    String
  url      String
  courseId String
  course   Course   @relation(fields: [courseId], references: [id])

  @@schema("course")
}
